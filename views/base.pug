doctype html
html
  head
    title My Diary
    meta(name='viewport', content='width=device-width, initial-scale=1')
    block scripts
      script(src='/static/header.js')
    block style
    style 
      include ../static/header.css
  body
    header.header
      div.background
      div.left
        img.logoimg(src='/static/res/logo3.png' style='mix-blend-mode: multiply;')
        h3 My Diary
      div.mid
        ul.navbar
          li
            a(href='/') Home
          li
            a(href=`/mydiary?date=${new Date().toISOString().split('T')[0]}`) My Diary
          li
            a(href='/contactus') Contact Us
      div#dropdown
        div#right
          img#loginimg(src='/static/res/login.png')
          h3#username= login
          ul#profile
            li#li1.liitem
              a(href=`/mydiary?date=${new Date().toISOString().split('T')[0]}`) My Diary
            li#li2.liitem
              a(href='/logout') Logout
    block content
    footer#foot
